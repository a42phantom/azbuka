	section.page-content
		.pageContentWrap
			.mainColumn
				+historyBack('ЖК «СЕВЕРНАЯ ПАЛИТРА»','цена от застройщика')
				.vacHomeBlock
					.vacHomeWrap
						.vachomeImage
							img(src="images/vacHomeMainPic.png")
